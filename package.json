{
    "name": "drkryz-theme",
    "displayName": "Drkryz Theme",
    "description": "New drkryz team theme for vscode",
    "version": "1.4.9",
    "author": "DRK - Caio Augusto",
    "publisher": "drkryz",
    "icon": "assets/logo.png",
    "galleryBanner": {
        "color": "#1d1d1d",
        "theme": "dark"
    },
    "contributors": [
        {
            "name": "DRK",
            "email": "support@drkryz.xyz",
            "url": "https://github.com/drpidman"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Drkryz/vscode-drkcolor-theme"
    },
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Drkryz Dark Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/drkryzDark-color-theme.json"
            },
            {
                "label": "Drkryz Light Theme",
                "uiTheme": "vs",
                "path": "./themes/drkryzLight-color-theme.json"
            }
        ],
        "productIconThemes": [
            {
                "id": "ic-drkryz-thm",
                "label": "Fluent Icon Theme",
                "path": "./themes/drkryz-product-icon-theme.json"
            }
        ]
    },
    "keywords": [
        "Themes",
        "vs-code Theme"
    ],
    "license": "MIT",
    "scripts": {
        "update": "node ./build/update.js",
        "show": "open ./themes/drkryz.html",
        "lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "handlebars": ">=4.7.7",
        "icon-font-generator": "^2.1.10",
        "lodash": ">=4.17.21",
        "minimist": "^1.2.3",
        "opentype.js": "^0.6.6",
        "release-it": "^14.3.0",
        "svgo": "^1.3.2",
        "underscore": ">=1.12.1",
        "xmldom": ">=0.5.0",
        "@types/vscode": "^1.40.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x"
    },
    "dependencies": {
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "webfont": "^11.2.26"
    }
}
